<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Ponemos el item de nuestra persona-->
    <ImageView
        android:id="@+id/ivPerson"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <!-- Aquí pondremos el nombre de la persona
    app:layout_constraintBottom_toBottomOf="@+id/ivPerson",justo aquí le decimos
    que estara alineado a la foto
    -->

    <TextView
        android:id="@+id/tvName"
        app:layout_constraintTop_toTopOf="@+id/ivPerson"
        app:layout_constraintBottom_toBottomOf="@+id/ivPerson"
        app:layout_constraintStart_toEndOf="@+id/ivPerson"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>