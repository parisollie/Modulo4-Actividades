<!--
*LinearLayout,puede contener varios elementos solo que los vaya
horizontalmente de izquierda a derecha  y verticalmente de arriba hacia
abajo.

*wrap_content, quiere decir que se ajuste al contenido

con el atributo witth , asignamos un espacio equitativo

android:layout_marginTop="30dp",vamos moviendo los espacios,esto
depende hacÃ­a que posicion lo ponemos
    -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="componentesgraficos.LinearActivity">

    <TextView
        android:text="Componente 1"
        android:background="@android:color/holo_orange_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Componente 2"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Componente 3"
        android:background="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Componente 4"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Componente 5"
            android:background="@android:color/holo_orange_dark"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Componente 6"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Componente 7"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Componente 8"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Componente 9"
            android:background="@android:color/holo_red_light"
            android:layout_weight="3"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Componente 10"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@android:color/holo_blue_bright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Componente 11"
            android:layout_weight="2"
            android:layout_marginEnd="10dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <TextView
        android:text="Componente 12"
        android:background="@android:color/holo_purple"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Componente 13"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>

